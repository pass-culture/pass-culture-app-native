{
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "build",
    "types": [
      "jest",
      "node",
    ],
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "build/**",
    "node_modules/**",
    "babel.config.js"
  ],
  "ts-node": {
    "swc": true
  }
}
