{
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmit": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [
      "node",
      "@wdio/global/types",
      "@wdio/mocha-framework",
      "expect-webdriverio",
    ]
  },
  "include": [
    "./config/**/*.ts",
    "./tests/**/*.ts"
  ]
}
