{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "target": "es5",
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "react-native.config.js",
    "rn-cli.config.js",
    "__mocks__/**",
    "coverage/**"
  ]
}
