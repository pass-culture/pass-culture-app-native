{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "*"] // if you change this line, check this doc https://github.com/pass-culture/pass-culture-app-native/blob/5ff5fba596244a759d60f8c9cdb67d56ac86a1a7/doc/development/alias.md
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2022", "dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "target": "es5",
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "downlevelIteration": true,
    "types": ["@types/styled-components-react-native"]
  },
  "exclude": [
    "build/**",
    "dist/**",
    "maestro/**",
    "allure-results/**",
    "node_modules/**",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "jest.web.config.js",
    "react-native.config.js",
    "rn-cli.config.js",
    "coverage/**",
    "./server/**"
  ],
  "extends": "@react-native/typescript-config/tsconfig.json"
}
